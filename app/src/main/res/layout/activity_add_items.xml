<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F44336"
    tools:context=".Add_Items">

    <!-- Add Item CircleImageView -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Items"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginBottom="16dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/add"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"
            android:layout_marginBottom="24dp" />


    <!-- CardView for Input Fields -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add Item Inputs -->
            <EditText
                android:id="@+id/add_item_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Item Name"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#F44336"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/add_item_price"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Item Price"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:inputType="number"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#F44336"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/add_item_description"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Item Description"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#F44336"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Item Location"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#F44336"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />
            <!-- Add Item Button -->
            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#F44336"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_marginTop="24dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
